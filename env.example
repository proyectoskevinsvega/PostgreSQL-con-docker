# PostgreSQL Docker Environment Variables
# Configuraci√≥n del entorno para PostgreSQL + pgAdmin4

# PostgreSQL Configuration
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_PORT=5432

# pgAdmin4 Configuration
PGADMIN_EMAIL=admin@postgresql.local
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=8080


# Network Configuration
POSTGRESQL_NETWORK=postgresql_network

# Volume Configuration
POSTGRESQL_DATA_VOLUME=postgresql_data
PGADMIN_DATA_VOLUME=pgadmin_data

# Development Configuration
NODE_ENV=development
DEBUG=true
LOG_LEVEL=info

# Security Configuration
POSTGRES_SSL_MODE=prefer
POSTGRES_SSL_CERT=
POSTGRES_SSL_KEY=
POSTGRES_SSL_ROOT_CERT=

# Performance Configuration
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB
POSTGRES_WORK_MEM=4MB
POSTGRES_MAINTENANCE_WORK_MEM=64MB

# Logging Configuration
POSTGRES_LOG_LEVEL=info
POSTGRES_LOG_STATEMENT=all
POSTGRES_LOG_MIN_DURATION_STATEMENT=1000

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

# PostgreSQL Exporter
POSTGRES_EXPORTER_PORT=9187
POSTGRES_REPLICA_EXPORTER_PORT=9188

# Replication Configuration
REPLICATION_ENABLED=false
POSTGRES_REPLICA_PORT=5433
POSTGRES_REPLICATION_USER=replicator
POSTGRES_REPLICATION_PASSWORD=replicator123

# Clustering Configuration
CLUSTERING_ENABLED=false
CLUSTER_MODE=standalone
CLUSTER_NODES=1
